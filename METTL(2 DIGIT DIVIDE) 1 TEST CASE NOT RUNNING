using System;
using System.Collections.Generic;

//Read only region start
public class UserMainCode
{
    public double FindAverage(int input1)
    {
        //Read only region end
        //Write code here
        //throw new NotImplementedException("Method  FindAverage(int input1) not Implemented.");
        int l=input1.ToString().Length;
		int[] arr=new int[l];
		int sum=0;
		int c=0;
		while(input1>0)
		{
			arr[c]=input1%10;
			c++;
			input1=input1/10;
		}
		for(int i=0;i<arr.Length;i++)
		{
			sum=sum+arr[i];
		}
		 double divide=0.0;
		double input2=double.Parse(l.ToString());
		double sum1=double.Parse(sum.ToString());
		
		 divide=sum1/input2;
		
			divide=Math.Truncate(100*divide)/100;
			Console.WriteLine(divide);
			return divide;
		
	}
}
